<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ELIPS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar-fixed-top container">
        <div class="row">
            <div class="col-lg-1">
                @Html.ActionLink("ELIPS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 25px" })
            </div>
            <div class="col-lg-4" style="margin-top:10px; margin-left:10px">
                <div class="form-inline">
                    <input type="text" class="form-control" placeholder="Czego szukasz?"/>
                    <button type="submit" class="btn btn-primary">Szukaj</button>
                </div>
            </div>
    </div>

    </div>
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center">&copy; @DateTime.Now.Year - ELIPS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
